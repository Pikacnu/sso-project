# General
APP_NAME=sso-server
PORT=8080
HOSTNAME=localhost
FRONTEND_URL=http://localhost:5173
DEBUG=false

# Database
CONNECTION_STRING=postgres://user:pass@localhost:5434/sso_db?sslmode=disable
DB_USE_SQLITE=false

# JWT
JWT_SECRET=change-me
OPENID_KEY_EXPIRE_DAYS=30

# Rate limiting and caching
RATE_LIMIT_PER_MINUTE=100
EXTERNAL_CACHE_TTL_SECONDS=300

# OAuth Providers (leave blank to disable)
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Discord OAuth
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Email Configuration (leave EMAIL_SMTP_HOST blank to disable email)
EMAIL_FROM=no-reply@example.com
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=

