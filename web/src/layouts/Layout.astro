---
import "../styles/global.css";
const title = Astro.locals.title || "SSO Server";
const description = Astro.locals.description || "A Single Sign-On (SSO) server built with Go, OAuth2, and OpenID Connect.";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body class="w-full min-h-dvh flex flex-col bg-gray-100 dark:bg-slate-950 dark:text-white">
		<slot />
	</body>
</html>
